<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item0"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            app:layout_widthPercent="80%">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Item Name"/>

        </android.support.design.widget.TextInputLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item1"
        android:layout_below="@id/item0"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            app:layout_widthPercent="80%">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:hint="Item Description"/>

        </android.support.design.widget.TextInputLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item2"
        android:layout_below="@id/item1"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="Category"

            app:layout_marginLeftPercent="12%"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            android:textAlignment="center"

            app:layout_marginRightPercent="8%"
            app:layout_widthPercent="55%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item3"
        android:layout_below="@+id/item2"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%">

        <TextView
            android:id="@+id/textViewAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="Available"

            app:layout_marginLeftPercent="12%"/>

        <CheckBox
            android:id="@+id/checkBoxAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/textViewAvailable"

            app:layout_marginLeftPercent="8%"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            app:layout_marginRightPercent="10%"
            app:layout_widthPercent="30%">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="number"
                android:hint="Price"/>

        </android.support.design.widget.TextInputLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>