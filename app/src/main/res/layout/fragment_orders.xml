<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item0"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="@drawable/selector_list">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Order #21"

            app:layout_marginLeftPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/redLight"
            android:textSize="16sp"
            android:text="Canceled"

            app:layout_marginRightPercent="10%"/>

        <View
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"

            app:layout_widthPercent="80%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item1"
        android:layout_below="@id/item0"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="@drawable/selector_list">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Order #24"

            app:layout_marginLeftPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/greenLight"
            android:textSize="16sp"
            android:text="Served"

            app:layout_marginRightPercent="10%"/>

        <View
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"

            app:layout_widthPercent="80%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item2"
        android:layout_below="@id/item1"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="@drawable/selector_list">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Order #35"

            app:layout_marginLeftPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:text="Delayed"

            app:layout_marginRightPercent="10%"/>

        <View
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"

            app:layout_widthPercent="80%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item3"
        android:layout_below="@+id/item2"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="@drawable/selector_list">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Order #36"

            app:layout_marginLeftPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito"
            android:textColor="@color/blueLight"
            android:textSize="16sp"
            android:text="Ready"

            app:layout_marginRightPercent="10%"/>

        <View
            android:layout_height="0.5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"

            app:layout_widthPercent="80%"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/item4"
        android:layout_below="@+id/item3"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="@drawable/selector_list">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Table Total"

            app:layout_marginLeftPercent="10%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/greenLight"
            android:textSize="16sp"
            android:text="R 392.00"

            app:layout_marginRightPercent="10%"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>